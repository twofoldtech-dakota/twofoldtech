---
import BaseLayout from './BaseLayout.astro';
import Badge from '@/components/common/Badge.astro';

interface Props {
  title: string;
  description: string;
  publishDate: Date;
  author?: string;
  tags?: string[];
  category?: string;
  heroImage?: string;
}

const {
  title,
  description,
  publishDate,
  author = 'Twofold Tech',
  tags = [],
  category = 'engineering',
  heroImage,
} = Astro.props;

const formattedDate = publishDate.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});

const categoryColors: Record<string, string> = {
  engineering: 'orange',
  product: 'dark',
  research: 'outline',
  tutorial: 'default',
  announcement: 'orange',
};
---

<BaseLayout title={title} description={description} article={true}>
  <article class="pt-40 pb-20">
    <!-- Article Header -->
    <header class="border-b-5 border-black pb-12 mb-12">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          <div class="flex items-center gap-4 mb-6">
            <Badge variant={categoryColors[category] as any || 'default'}>
              {category.toUpperCase()}
            </Badge>
            <time datetime={publishDate.toISOString()} class="font-mono text-sm text-gray-600 uppercase">
              {formattedDate}
            </time>
          </div>

          <h1 class="text-4xl sm:text-5xl md:text-6xl font-black uppercase leading-[0.95] tracking-tighter mb-6">
            {title}
          </h1>

          <p class="text-xl font-mono text-gray-700 mb-8">
            {description}
          </p>

          <div class="flex flex-wrap items-center gap-4">
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 bg-tf-orange border-3 border-black flex items-center justify-center font-mono font-bold">
                {author.charAt(0).toUpperCase()}
              </div>
              <span class="font-bold">{author}</span>
            </div>

            {tags.length > 0 && (
              <div class="flex flex-wrap gap-2">
                {tags.map((tag) => (
                  <span class="font-mono text-xs px-2 py-1 bg-gray-100 border border-black">
                    #{tag}
                  </span>
                ))}
              </div>
            )}
          </div>
        </div>
      </div>
    </header>

    <!-- Hero Image -->
    {heroImage && (
      <div class="container mx-auto px-4 mb-12">
        <div class="max-w-4xl mx-auto">
          <div class="border-5 border-black shadow-neo overflow-hidden">
            <img
              src={heroImage}
              alt={title}
              class="w-full h-auto"
            />
          </div>
        </div>
      </div>
    )}

    <!-- Article Content -->
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <div class="prose prose-lg prose-neutral max-w-none
          prose-headings:font-black prose-headings:uppercase prose-headings:tracking-tight
          prose-h2:text-3xl prose-h2:mt-12 prose-h2:mb-6 prose-h2:border-b-4 prose-h2:border-black prose-h2:pb-4
          prose-h3:text-2xl prose-h3:mt-8 prose-h3:mb-4
          prose-p:font-mono prose-p:text-base prose-p:leading-relaxed
          prose-a:text-tf-orange prose-a:font-bold prose-a:no-underline hover:prose-a:underline
          prose-code:bg-gray-100 prose-code:px-2 prose-code:py-1 prose-code:border prose-code:border-black prose-code:font-mono
          prose-pre:bg-black prose-pre:border-5 prose-pre:border-black prose-pre:shadow-neo
          prose-blockquote:border-l-5 prose-blockquote:border-tf-orange prose-blockquote:bg-gray-50 prose-blockquote:px-6 prose-blockquote:py-4 prose-blockquote:not-italic
          prose-img:border-5 prose-img:border-black prose-img:shadow-neo
          prose-ul:font-mono prose-ol:font-mono
          prose-li:marker:text-tf-orange
        ">
          <slot />
        </div>
      </div>
    </div>

    <!-- Article Footer -->
    <footer class="container mx-auto px-4 mt-16">
      <div class="max-w-4xl mx-auto border-t-5 border-black pt-12">
        <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-6">
          <div>
            <p class="font-mono text-sm text-gray-600 mb-2">WRITTEN BY</p>
            <p class="font-bold text-xl">{author}</p>
          </div>
          <div class="flex gap-4">
            <a
              href="/blog"
              class="font-mono font-bold text-sm px-6 py-3 border-3 border-black bg-white hover:bg-gray-100 transition-colors"
            >
              &larr; ALL POSTS
            </a>
          </div>
        </div>
      </div>
    </footer>
  </article>
</BaseLayout>
