---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Button from '@/components/common/Button.astro';
import Badge from '@/components/common/Badge.astro';
import { Mail, MapPin, Clock, Send, Phone, Building } from 'lucide-react';
import {
  CONTACT_META,
  CONTACT_METHODS,
  INQUIRY_TYPES,
} from '@/lib/constants/contact';

const iconMap: Record<string, any> = {
  mail: Mail,
  'map-pin': MapPin,
  clock: Clock,
};
---

<BaseLayout title={CONTACT_META.title} description={CONTACT_META.description}>
  <!-- Hero Section -->
  <header class="pt-40 pb-20 border-b-5 border-black bg-white bg-grid-pattern bg-[size:40px_40px]">
    <div class="container mx-auto px-4">
      <div class="max-w-5xl">
        <div class="inline-block bg-black text-white px-4 py-2 font-mono font-bold text-sm mb-6 uppercase tracking-wider">
          GET IN TOUCH
        </div>
        <h1 class="text-5xl sm:text-7xl md:text-8xl font-black uppercase leading-[0.9] tracking-tighter mb-8">
          {CONTACT_META.title}
        </h1>
        <p class="text-2xl md:text-3xl font-mono font-bold text-tf-orange mb-6 uppercase">
          {CONTACT_META.tagline}
        </p>
        <p class="text-xl font-mono text-gray-700 max-w-3xl">
          {CONTACT_META.description}
        </p>
      </div>
    </div>
  </header>

  <!-- Contact Info Bar -->
  <section class="py-12 border-t-5 border-black bg-black text-white">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {CONTACT_METHODS.map((method) => {
          const IconComponent = iconMap[method.icon];
          return (
            <div class="flex items-center gap-4">
              <div class="bg-tf-orange p-3 border-2 border-white">
                {IconComponent && <IconComponent size={24} className="text-black" />}
              </div>
              <div>
                <p class="font-mono text-xs text-gray-400 uppercase">{method.label}</p>
                <p class="font-bold text-lg">{method.value}</p>
              </div>
            </div>
          );
        })}
      </div>
    </div>
  </section>

  <!-- Contact Form Section -->
  <section class="py-32 border-t-5 border-black bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto">
        <div class="mb-12 text-center">
          <h2 class="text-4xl font-black uppercase mb-4">Send a Message</h2>
          <p class="font-mono text-gray-600">
            Fill out the form below and we'll get back to you within 24 hours.
          </p>
        </div>

        <form class="space-y-6 border-5 border-black p-8 md:p-12 shadow-neo bg-white" action="#" method="POST">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <!-- Name -->
            <div>
              <label class="block font-mono font-bold text-sm uppercase mb-2" for="name">
                Full Name *
              </label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full border-4 border-black px-4 py-3 font-mono focus:outline-none focus:border-tf-orange transition-colors"
                placeholder="John Doe"
              />
            </div>

            <!-- Email -->
            <div>
              <label class="block font-mono font-bold text-sm uppercase mb-2" for="email">
                Email Address *
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full border-4 border-black px-4 py-3 font-mono focus:outline-none focus:border-tf-orange transition-colors"
                placeholder="john@company.com"
              />
            </div>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <!-- Company -->
            <div>
              <label class="block font-mono font-bold text-sm uppercase mb-2" for="company">
                Company
              </label>
              <input
                type="text"
                id="company"
                name="company"
                class="w-full border-4 border-black px-4 py-3 font-mono focus:outline-none focus:border-tf-orange transition-colors"
                placeholder="Acme Corp"
              />
            </div>

            <!-- Inquiry Type -->
            <div>
              <label class="block font-mono font-bold text-sm uppercase mb-2" for="inquiry">
                Inquiry Type *
              </label>
              <select
                id="inquiry"
                name="inquiry"
                required
                class="w-full border-4 border-black px-4 py-3 font-mono focus:outline-none focus:border-tf-orange transition-colors bg-white"
              >
                <option value="">Select an option...</option>
                {INQUIRY_TYPES.map((type) => (
                  <option value={type.value}>{type.label}</option>
                ))}
              </select>
            </div>
          </div>

          <!-- Message -->
          <div>
            <label class="block font-mono font-bold text-sm uppercase mb-2" for="message">
              Message *
            </label>
            <textarea
              id="message"
              name="message"
              required
              rows="6"
              class="w-full border-4 border-black px-4 py-3 font-mono focus:outline-none focus:border-tf-orange transition-colors resize-none"
              placeholder="Tell us about your project or inquiry..."
            ></textarea>
          </div>

          <!-- Submit -->
          <div>
            <button
              type="submit"
              class="w-full bg-tf-orange border-4 border-black px-8 py-4 font-mono font-bold text-lg uppercase shadow-neo hover:shadow-[12px_12px_0px_#000] hover:-translate-y-1 transition-all flex items-center justify-center gap-3"
            >
              <Send size={20} />
              Send Message
            </button>
          </div>
        </form>

        <!-- Direct Contact -->
        <div class="mt-12 text-center">
          <p class="font-mono text-gray-600 mb-4">
            Prefer direct contact? Reach out via email:
          </p>
          <a
            href="mailto:hello@twofold.tech"
            class="inline-flex items-center gap-2 bg-black text-white px-6 py-3 font-mono font-bold uppercase border-4 border-black hover:bg-tf-orange hover:text-black transition-colors"
          >
            <Mail size={18} />
            hello@twofold.tech
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
