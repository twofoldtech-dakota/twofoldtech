---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Button from '@/components/common/Button.astro';
import { AlertTriangle, Home, ArrowLeft } from 'lucide-react';
---

<BaseLayout title="404 - Page Not Found">
  <main class="min-h-screen flex items-center justify-center bg-white bg-grid-pattern bg-[size:40px_40px]">
    <div class="container mx-auto px-4 py-32 text-center">
      <div class="max-w-2xl mx-auto">
        <div class="inline-block bg-tf-orange border-5 border-black p-6 mb-8 shadow-neo">
          <AlertTriangle size={64} className="text-black" />
        </div>
        
        <h1 class="text-8xl md:text-9xl font-black uppercase mb-4">404</h1>
        
        <div class="inline-block bg-black text-white px-4 py-2 font-mono font-bold text-lg mb-8 uppercase tracking-wider">
          PAGE_NOT_FOUND
        </div>
        
        <p class="text-xl font-mono text-gray-700 mb-12">
          The page you're looking for doesn't exist or has been moved.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <Button href="/" class="text-lg px-8 py-4">
            <Home size={20} className="mr-2" />
            BACK TO HOME
          </Button>
          <a href="javascript:history.back()" class="font-sans font-bold text-lg border-5 border-black transition-all duration-100 px-8 py-4 flex items-center justify-center gap-2 uppercase tracking-tight shadow-neo active:translate-x-[4px] active:translate-y-[4px] active:shadow-none hover:-translate-y-1 hover:-translate-x-1 hover:shadow-[10px_10px_0px_0px_#000000] bg-white text-black">
            <ArrowLeft size={20} />
            GO BACK
          </a>
        </div>
      </div>
    </div>
  </main>
</BaseLayout>
