---
import Button from '@/components/common/Button.astro';
import { FOOTER_NAV } from '@/lib/constants/site';

const currentYear = new Date().getFullYear();
---

<footer class="bg-black text-white pt-24 pb-12">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-12 mb-20">
      <!-- Brand Column -->
      <div class="col-span-1 lg:col-span-2">
        <a href="/" class="flex items-center gap-4 mb-6">
          <div class="relative w-12 h-12">
            <div class="absolute inset-0 bg-tf-orange translate-x-[4px] translate-y-[4px]"></div>
            <div class="absolute inset-0 bg-white border-4 border-white flex items-center justify-center z-10">
              <span class="font-mono font-black text-xl text-black">2F</span>
            </div>
          </div>
          <span class="text-3xl font-black tracking-tighter uppercase text-tf-orange">TWOFOLD</span>
        </a>
        <p class="font-mono text-lg text-gray-400 max-w-md mb-8">
          Senior Expertise. Serious Software. We unify CMS access with Conduit and orchestrate deterministic delivery with STUDIO.
        </p>
        <Button variant="primary" href="/contact">START A PROJECT</Button>
      </div>

      <!-- Products -->
      <div>
        <h5 class="font-bold border-b-2 border-tf-orange pb-2 mb-6 inline-block text-tf-orange uppercase">
          Products
        </h5>
        <ul class="space-y-4 font-mono font-bold">
          {FOOTER_NAV.products.map((link) => (
            <li>
              <a
                href={link.href}
                class="hover:text-tf-orange hover:pl-2 transition-all"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Company -->
      <div>
        <h5 class="font-bold border-b-2 border-tf-orange pb-2 mb-6 inline-block text-tf-orange uppercase">
          Company
        </h5>
        <ul class="space-y-4 font-mono font-bold">
          {FOOTER_NAV.company.map((link) => (
            <li>
              <a
                href={link.href}
                class="hover:text-tf-orange hover:pl-2 transition-all"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Resources -->
      <div>
        <h5 class="font-bold border-b-2 border-tf-orange pb-2 mb-6 inline-block text-tf-orange uppercase">
          Resources
        </h5>
        <ul class="space-y-4 font-mono font-bold">
          {FOOTER_NAV.resources.map((link) => (
            <li>
              <a
                href={link.href}
                class="hover:text-tf-orange hover:pl-2 transition-all"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
        <div class="mt-8">
          <h6 class="font-mono text-sm text-gray-500 mb-3 uppercase">Contact</h6>
          <a href="mailto:contact@twofold.tech" class="font-mono text-tf-orange hover:text-white transition-colors">
            contact@twofold.tech
          </a>
        </div>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="border-t-2 border-gray-800 pt-8 flex flex-col md:flex-row justify-between items-center font-mono text-xs text-gray-500 uppercase tracking-widest">
      <p>&copy; {currentYear} TWOFOLD TECHNOLOGIES INC.</p>
      <div class="flex gap-8 mt-4 md:mt-0">
        <a href="/privacy" class="hover:text-white transition-colors">Privacy Policy</a>
        <a href="/terms" class="hover:text-white transition-colors">Terms of Service</a>
      </div>
    </div>
  </div>
</footer>
