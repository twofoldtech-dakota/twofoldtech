---
interface Props {
  variant?: 'default' | 'dark' | 'highlight';
  class?: string;
  hover?: boolean;
}

const {
  variant = 'default',
  class: className = '',
  hover = true,
} = Astro.props;

const variants = {
  default: 'bg-white',
  dark: 'bg-black text-white',
  highlight: 'bg-gray-100 hover:bg-tf-orange hover:text-white',
};

const hoverClasses = hover
  ? 'hover:-translate-y-1 hover:shadow-[12px_12px_0px_#000] transition-all'
  : '';
---

<div class={`border-5 border-black p-8 shadow-neo ${variants[variant]} ${hoverClasses} ${className}`}>
  <slot />
</div>
