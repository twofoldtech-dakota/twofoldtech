---
import { Brain, ShieldCheck, Terminal, FileCode } from 'lucide-react';
---

<div class="w-full h-full bg-gray-50 border-5 border-black p-8 flex flex-col items-center relative overflow-hidden min-h-[400px]">
  <div class="absolute top-0 left-0 bg-black text-white px-3 py-1 font-mono text-xs font-bold">
    LOGIC_GATE_VISUALIZER
  </div>

  <!-- Level 1: The Planner -->
  <div class="mt-8">
    <div class="relative border-4 border-black p-4 w-full md:w-64 transition-all shadow-neo bg-white text-black">
      <div class="flex items-center gap-3 mb-2">
        <Brain size={24} />
        <h4 class="font-black uppercase text-lg leading-none">The Planner</h4>
      </div>
      <p class="font-mono text-xs font-bold uppercase tracking-wider opacity-80">
        Architectural Strategy
      </p>
      <div class="absolute left-1/2 -bottom-8 w-1 h-8 bg-black"></div>
      <div class="absolute top-2 right-2">
        <div class="w-3 h-3 border-2 border-black bg-gray-300"></div>
      </div>
    </div>
  </div>

  <div class="h-8"></div>

  <!-- Level 2: The Gate -->
  <div class="relative z-10">
    <div class="relative border-4 border-black p-4 w-full md:w-64 transition-all shadow-[8px_8px_0px_#FF5F1F] bg-black text-white">
      <div class="flex items-center gap-3 mb-2">
        <ShieldCheck size={24} />
        <h4 class="font-black uppercase text-lg leading-none">Quality Gate</h4>
      </div>
      <p class="font-mono text-xs font-bold uppercase tracking-wider opacity-80">
        Constraint Validation
      </p>
      <div class="absolute left-1/2 -bottom-8 w-1 h-8 bg-black"></div>
      <div class="absolute top-2 right-2">
        <div class="w-3 h-3 border-2 border-black bg-white animate-pulse"></div>
      </div>
    </div>
    <!-- Reject Path Visual -->
    <div class="absolute top-1/2 right-0 translate-x-full w-12 h-1 bg-black hidden md:block"></div>
    <div class="absolute top-1/2 right-0 translate-x-[48px] -translate-y-[20px] bg-white border-2 border-black px-2 py-1 text-[10px] font-mono font-bold text-red-600 hidden md:block">
      REJECT DRIFT
    </div>
  </div>

  <div class="h-8"></div>

  <!-- Level 3: The Builder -->
  <div class="relative border-4 border-black p-4 w-full md:w-64 transition-all shadow-neo bg-white text-black">
    <div class="flex items-center gap-3 mb-2">
      <Terminal size={24} />
      <h4 class="font-black uppercase text-lg leading-none">The Builder</h4>
    </div>
    <p class="font-mono text-xs font-bold uppercase tracking-wider opacity-80">
      Implementation
    </p>
    <div class="absolute left-1/2 -bottom-8 w-1 h-8 bg-black"></div>
    <div class="absolute top-2 right-2">
      <div class="w-3 h-3 border-2 border-black bg-gray-300"></div>
    </div>
  </div>

  <div class="h-8"></div>

  <!-- Level 4: The Reviewer -->
  <div class="relative border-4 border-black p-4 w-full md:w-64 transition-all shadow-neo bg-white text-black">
    <div class="flex items-center gap-3 mb-2">
      <FileCode size={24} />
      <h4 class="font-black uppercase text-lg leading-none">The Reviewer</h4>
    </div>
    <p class="font-mono text-xs font-bold uppercase tracking-wider opacity-80">
      Validation & Traceability
    </p>
    <div class="absolute left-1/2 -bottom-8 w-1 h-8 bg-black"></div>
    <div class="absolute top-2 right-2">
      <div class="w-3 h-3 border-2 border-black bg-gray-300"></div>
    </div>
  </div>

  <!-- Background Grid -->
  <div
    class="absolute inset-0 z-0 opacity-10 pointer-events-none"
    style="background-image: linear-gradient(#000 1px, transparent 1px), linear-gradient(90deg, #000 1px, transparent 1px); background-size: 20px 20px;"
  ></div>
</div>
