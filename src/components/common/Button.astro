---
interface Props {
  variant?: 'primary' | 'secondary' | 'outline' | 'outline-light';
  href?: string;
  class?: string;
  type?: 'button' | 'submit' | 'reset';
  fullWidth?: boolean;
}

const {
  variant = 'primary',
  href,
  class: className = '',
  type = 'button',
  fullWidth = false,
} = Astro.props;

const baseStyles = "font-sans font-bold text-lg border-5 border-black transition-all duration-100 px-8 py-3 flex items-center justify-center gap-2 uppercase tracking-tight";
const interactionStyles = "shadow-neo active:translate-x-[4px] active:translate-y-[4px] active:shadow-none hover:-translate-y-1 hover:-translate-x-1 hover:shadow-[10px_10px_0px_0px_#000000]";

const variants = {
  primary: "bg-tf-orange text-black",
  secondary: "bg-black text-white hover:bg-gray-900",
  outline: "bg-white text-black",
  'outline-light': "bg-transparent text-white border-white hover:bg-white hover:text-black"
};

const classes = `${baseStyles} ${interactionStyles} ${variants[variant]} ${fullWidth ? 'w-full' : ''} ${className}`;
---

{href ? (
  <a href={href} class={classes}>
    <slot />
  </a>
) : (
  <button type={type} class={classes}>
    <slot />
  </button>
)}
